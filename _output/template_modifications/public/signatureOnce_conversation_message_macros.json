{
    "template": "conversation_message_macros",
    "description": "Add post and thread argument for macro \"signature\" under \"message_macros\" template",
    "execution_order": 10,
    "enabled": true,
    "action": "str_replace",
    "find": "<xf:macro template=\"message_macros\" name=\"signature\" arg-user=\"{$message.User}\" />",
    "replace": "<xf:macro template=\"message_macros\" name=\"signature\" arg-user=\"{$message.User}\" arg-content=\"{$message}\" />"
}
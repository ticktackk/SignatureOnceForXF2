{
    "template": "post_macros",
    "description": "Add post and thread argument for macro \"signature\" under \"message_macros\" template",
    "execution_order": 10,
    "enabled": true,
    "action": "preg_replace",
    "find": "#(<xf:macro template=\"message_macros\" name=\"signature\".*?)(\\/>)#si",
    "replace": "$1arg-content=\"{$post}\"$2"
}